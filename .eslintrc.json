{
	"root": true,
	"extends": [
		"wikimedia/client-es6",
		"wikimedia/mediawiki"
	],
	"globals": {
		"$": false
	},
	"rules": {
		"max-len": "off",
		"no-jquery/variable-pattern": "off",
		"no-jquery/no-event-shorthand": "off",
		"vue/no-undef-properties": "off",
		"vue/no-unused-refs": "off",
		"no-var": "off"
	},
	"overrides": [
		{
			"files": [ "**/*.js", "**/*.vue" ],
			"rules": {
				"max-len": [
					"warn",
					{
						"code": 110,
						"ignoreComments": true,
						"ignoreStrings": true,
						"ignoreTemplateLiterals": true
					}
				]
			}
		}
	]
}
