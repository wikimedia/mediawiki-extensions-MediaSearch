{
	"root": true,
	"extends": [
		"wikimedia/client-es6",
		"wikimedia/mediawiki"
	],
	"globals": {
		"$": false
	},
	"rules": {
		"max-len": "off",
		"no-jquery/variable-pattern": "off",
		"no-jquery/no-event-shorthand": "off",
		"compat/compat": "warn",
		"es-x/no-array-prototype-find": "warn",
		"es-x/no-array-prototype-findindex": "warn",
		"es-x/no-array-prototype-keys": "warn",
		"es-x/no-regexp-u-flag": "warn",
		"es-x/no-regexp-unicode-property-escapes": "warn",
		"vue/no-undef-properties": "off",
		"vue/no-unused-refs": "off",
		"no-var": "off",
		"mediawiki/msg-doc": "off"
	},
	"overrides": [
		{
			"files": [ "**/*.test.js" ],
			"env": {
				"jest": true
			},
			"globals": {
				"global": false
			}
		},
		{
			"files": [ "**/*.js", "**/*.vue" ],
			"rules": {
				"max-len": [
					"warn",
					{
						"code": 110,
						"ignoreComments": true
					}
				]
			}
		}
	]
}
